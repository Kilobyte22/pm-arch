# Maintainer: Bhushan Shah <bshah@kde.org>
pkgname=libresource
pkgver=r116.4e5d32a
pkgrel=1
pkgdesc="MeeGo resource management low level C API libraries"
arch=('i686' 'x86_64')
url="https://github.com/mer-packages/libresource"
license=('LGPL')
makedepends=('check') # 'bzr', 'git', 'mercurial' or 'subversion'
depends=('dbus-glib')
provides=('libresource')
source=('git://github.com/mer-packages/libresource.git')
md5sums=('SKIP')

pkgver() {
	cd libresource
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    mkdir -p libresource/build
}

build() {
    cd libresource
    ./autogen.sh
    cd build
	../configure --prefix=/usr
    # with -j(1+n) it fails to build
	MAKEFLAGS='-j1' make
}

package() {
	cd libresource/build
	make DESTDIR="$pkgdir/" install
}
