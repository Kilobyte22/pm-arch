# Maintainer: Bhushan Shah <bhush94 at gmail dot com>
pkgname=simplelogin
pkgver=r245.0958e6b
pkgrel=1
pkgdesc="super simple sans display display desktop manager mockup mitigating"
arch=('i686' 'x86_64' 'armv7h')
url="https://github.com/bhush9/simplelogin"
license=('GPL')
depends=('qt5-base')
makedepends=('git' 'cmake')
source=('https://github.com/bhush9/simplelogin.git')
md5sums=('SKIP')

pkgver() {
  cd simplelogin
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../simplelogin \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_TESTING=OFF \
    -DLIB_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir/" install
}
