# Maintainer: Bhushan Shah <bshah@kde.org>
pkgname=libresourceqt5
pkgver=r356.91058fd
pkgrel=1
pkgdesc="MeeGo Resource Policy Qt API"
arch=('i686' 'x86_64')
url="https://github.com/mer-packages/libresourceqt/"
license=('LGPL')
depends=('libresource' 'qt5-base')
provides=('libresourceqt')
source=('git://github.com/mer-packages/libresourceqt.git')
md5sums=('SKIP')

pkgver() {
	cd libresourceqt
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
    cd libresourceqt
    qmake-qt5 PREFIX=/usr .
    make
}

package() {
    cd libresourceqt
	make INSTALL_ROOT="$pkgdir/" install
    rm -r "$pkgdir/usr/lib/libresourceqt-qt5-tests/"
}
